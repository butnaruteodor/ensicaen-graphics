    <transform name="map14"><scale value="0.333,0.333,0.333"/><translate value="0,0.333,-0.333"/></transform>
    <transform name="map15"><scale value="0.333,0.333,0.333"/><translate value="0.333,0.333,-0.333"/></transform>
    <transform name="map16"><scale value="0.333,0.333,0.333"/><translate value="-0.333,0.333,0"/></transform>
    <transform name="map17"><scale value="0.333,0.333,0.333"/><translate value="0.333,0.333,0"/></transform>
    <transform name="map18"><scale value="0.333,0.333,0.333"/><translate value="-0.333,0.333,0.333"/></transform>
    <transform name="map19"><scale value="0.333,0.333,0.333"/><translate value="0,0.333,0.333"/></transform>
    <transform name="map20"><scale value="0.333,0.333,0.333"/><translate value="0.333,0.333,0.333"/></transform>

  </shape>
</scene>
